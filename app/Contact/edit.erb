<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @contact.name %></h1>
    <a href="<%= url_for :action => :show, :id => @contact.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @contact.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>

          <div data-role="fieldcontain">
            <label for="contact[FirstName]" class="fieldLabel">FirstName</label>
            <input type="text" id="contact[FirstName]" name="contact[FirstName]" value="<%= @contact.FirstName %>" <%= placeholder( "First Name" ) %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[LastName]" class="fieldLabel">Last Name</label>
            <input type="text" id="contact[LastName]" name="contact[LastName]" value="<%= @contact.LastName %>" <%= placeholder( "Last Name" ) %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[Phone]" class="fieldLabel">Phone</label>
            <input type="text" id="contact[Phone]" name="contact[Phone]" value="<%= @contact.Phone %>" <%= placeholder( "Phone" ) %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[Email]" class="fieldLabel">Email</label>
            <input type="text" id="contact[Email]" name="contact[Email]" value="<%= @contact.Email %>" <%= placeholder( "Email" ) %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[AccountId]" class="fieldLabel">Account</label>
            <input type="text" id="contact[AccountId]" name="contact[AccountId]" value="<%= @contact.AccountId %>" <%= placeholder( "Account" ) %> />
          </div>

      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
