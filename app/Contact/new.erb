<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @contact.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>


          <div data-role="fieldcontain">
            <label for="contact[first_name]" class="fieldLabel">First Name</label>
            <input type="text" id="contact[first_name]" name="contact[first_name]" <%= placeholder("First Name") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[last_name]" class="fieldLabel">Last Name</label>
            <input type="text" id="contact[last_name]" name="contact[last_name]" <%= placeholder("Last Name") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[phone]" class="fieldLabel">Phone</label>
            <input type="text" id="contact[phone]" name="contact[phone]" <%= placeholder("Phone") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[email]" class="fieldLabel">Email</label>
            <input type="text" id="contact[email]" name="contact[email]" <%= placeholder("Email") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="contact[account_name]" class="fieldLabel">Account Name</label>
            <input type="text" id="contact[account_name]" name="contact[account_name]" <%= placeholder("Account") %> />
          </div>


      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
