<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @contact.object %>
    <h1>Edit <%= @contact.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @contact.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="contact[name]" value="<%= @contact.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Phone: </td>
              <td class="itemValue"><input type="text" name="contact[phone]" value="<%= @contact.phone %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Email: </td>
              <td class="itemValue"><input type="text" name="contact[email]" value="<%= @contact.email %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Account: </td>
              <td class="itemValue"><input type="text" name="contact[account_id]" value="<%= @contact.account_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
