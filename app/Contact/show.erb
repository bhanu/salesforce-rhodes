<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @contact.name %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">Back</a>
    <a href="<%= url_for :action => :edit, :id => @contact.object %>" class="ui-btn-right" data-icon="star">Edit</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">

          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @contact.FirstName %> <%= @contact.LastName %></div>
          </li>

          <li>
            <div class="itemLabel">Phone</div>
            <div class="itemValue"><%= @contact.Phone %></div>
          </li>

          <li>
            <div class="itemLabel">Email</div>
            <div class="itemValue"><%= @contact.Email %></div>
          </li>

          <li>
            <div class="itemLabel">Account</div>
            <div class="itemValue"><%= @contact.AccountId %></div>
          </li>

    </ul>
  </div>

</div>
