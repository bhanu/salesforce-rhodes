<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @contact.name %></h1>
    <%= link_to "Edit", :action => :edit, :id => @contact.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @contact.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Phone</td>
        <td class="itemValue"><%= @contact.phone%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Email</td>
        <td class="itemValue"><%= @contact.email%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">AccountId</td>
        <td class="itemValue"><%= @contact.account_id%></td>
      </tr>
      
    </table>
  </div>

</div>
