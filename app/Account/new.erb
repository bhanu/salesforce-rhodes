<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @account.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @account.object %>"/>


          <div data-role="fieldcontain">
            <label for="account[Name]" class="fieldLabel">Name</label>
            <input type="text" id="account[Name]" name="account[Name]" <%= placeholder("Name") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="account[Phone]" class="fieldLabel">Phone</label>
            <input type="text" id="account[Phone]" name="account[Phone]" <%= placeholder("Phone") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="account[Website]" class="fieldLabel">Website</label>
            <input type="text" id="account[Website]" name="account[Website]" <%= placeholder("Website") %> />
          </div>


      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
