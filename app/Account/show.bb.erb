<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @account.name %></h1>
    <%= link_to "Edit", :action => :edit, :id => @account.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @account.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Phone</td>
        <td class="itemValue"><%= @account.phone%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Website</td>
        <td class="itemValue"><%= @account.website%></td>
      </tr>
      
    </table>
  </div>

</div>
