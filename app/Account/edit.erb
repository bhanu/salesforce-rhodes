<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @account.name %></h1>
    <a href="<%= url_for :action => :show, :id => @account.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @account.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @account.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="account[AccountName]" class="fieldLabel">Name</label>
            <input type="text" id="account[Name]" name="account[Name]" value="<%= @account.Name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="account[Phone]" class="fieldLabel">Phone</label>
            <input type="text" id="account[Phone]" name="account[Phone]" value="<%= @account.Phone %>" <%= placeholder( "Phone" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="account[Website]" class="fieldLabel">Website</label>
            <input type="text" id="account[Website]" name="account[Website]" value="<%= @account.Website %>" <%= placeholder( "Website" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
