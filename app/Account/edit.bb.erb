<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @account.object %>
    <h1>Edit <%= @account.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @account.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @account.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="account[name]" value="<%= @account.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Phone: </td>
              <td class="itemValue"><input type="text" name="account[phone]" value="<%= @account.phone %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Website: </td>
              <td class="itemValue"><input type="text" name="account[website]" value="<%= @account.website %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
